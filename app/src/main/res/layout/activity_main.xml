<?xml version="1.0" encoding="utf-8"?>

<!-- Root layout for the activity -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">

    <!-- Layout for the display area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="bottom">

        <!-- TextView for the display -->
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Display3"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="" />

    </LinearLayout>

    <!-- Divider between the display and the buttons -->
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toTopOf="@+id/linear_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Layout for the buttons -->
    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:baselineAligned="false"
        android:weightSum="4"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="6dp">

        <!-- Layout for the first column of buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:weightSum="5"
            android:layout_marginEnd="5dp">

            <!-- Layout for the AC button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <!-- Button for the AC operation -->
                <Button
                    android:id="@+id/button_ac"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@color/black"
                    android:text="AC"
                    tools:ignore="Hardcoded text"/>
            </LinearLayout>

            <!-- Layout for the 7 button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <!-- Button for the 7 operation -->
                <Button
                    android:id="@+id/button_7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@color/black"
                    android:text="7"
                    tools:ignore="Hardcoded text"/>
            </LinearLayout>

            <!-- Layout for the 4 button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <!-- Button for the 4 operation -->
                <Button
                    android:id="@+id/button_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@color/black"
                    android:text="4"
                    tools:ignore="Hardcoded text"/>
            </LinearLayout>

            <!-- Layout for the 1 button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <!-- Button for the 1 operation -->
                <Button
                    android:id="@+id/button_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@color/black"
                    android:text="1"
                    tools:ignore="Hardcoded text"/>
            </LinearLayout>

            <!-- Layout for the 0 button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <!-- Button for the 0 operation -->
                <Button
                    android:id="@+id/button_0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@color/black"
                    android:text="0"
                    tools:ignore="Hardcoded text"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Layout for the second column of buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:weightSum="5"
            android:layout_marginEnd="5dp">

            <!-- Layout for the factorial button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <!-- Button for the factorial operation -->
                <Button
                    android:id="@+id/button_factorial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@color/black"
                    android:text="!"
                    tools:ignore="Hardcoded text"/>
            </LinearLayout>

            <!-- Layout for the 8 button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <!-- Button for the 8 operation -->
                <Button
                    android:id="@+id/button_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@color/black"
                    android:text="8"
                    tools:ignore="Hardcoded text"/>
            </LinearLayout>

            <!-- Layout for the 5 button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <!-- Button for the 5 operation -->
                <Button
                    android:id="@+id/button_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@color/black"
                    android:text="5"
                    tools:ignore="Hardcoded text"/>
            </LinearLayout>

            <!-- Layout for the 2 button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <!-- Button for the 2 operation -->
                <Button
                    android:id="@+id/button_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@color/black"
                    android:text="2"
                    tools:ignore="Hardcoded text"/>
            </LinearLayout>

            <!-- Layout for the dot button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <!-- Button for the dot operation -->
                <Button
                    android:id="@+id/button_power"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@color/black"
                    android:text="^"
                    tools:ignore="Hardcoded text"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Layout for the third column of buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:weightSum="5"
            android:layout_marginEnd="5dp">

            <!-- Layout for the root button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <!-- Button for the root operation -->
                <Button
                    android:id="@+id/button_root"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@color/black"
                    android:text="√"
                    tools:ignore="Hardcoded text"/>
            </LinearLayout>

            <!-- Layout for the 9 button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <!-- Button for the 9 operation -->
                <Button
                    android:id="@+id/button_9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@color/black"
                    android:text="9"
                    tools:ignore="Hardcoded text"/>
            </LinearLayout>

            <!-- Layout for the 6 button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <!-- Button for the 6 operation -->
                <Button
                    android:id="@+id/button_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@color/black"
                    android:text="6"
                    tools:ignore="Hardcoded text"/>
            </LinearLayout>

            <!-- Layout for the 3 button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <!-- Button for the 3 operation -->
                <Button
                    android:id="@+id/button_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@color/black"
                    android:text="3"
                    tools:ignore="Hardcoded text"/>
            </LinearLayout>

            <!-- Layout for the dot button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <!-- Button for the dot operation -->
                <Button
                    android:id="@+id/button_dot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@color/black"
                    android:text="."
                    tools:ignore="Hardcoded text"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Layout for the fourth column of buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:weightSum="5"
            android:layout_marginEnd="5dp">

            <!-- Layout for the divide button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <!-- Button for the divide operation -->
                <Button
                    android:id="@+id/button_divide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@color/black"
                    android:text="/"
                    tools:ignore="Hardcoded text"/>
            </LinearLayout>

            <!-- Layout for the multiply button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <!-- Button for the multiply operation -->
                <Button
                    android:id="@+id/button_multiply"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@color/black"
                    android:text="*"
                    tools:ignore="Hardcoded text"/>
            </LinearLayout>

            <!-- Layout for the subtract button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <!-- Button for the subtract operation -->
                <Button
                    android:id="@+id/button_minus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@color/black"
                    android:text="-"
                    tools:ignore="Hardcoded text"/>
            </LinearLayout>

            <!-- Layout for the add button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <!-- Button for the add operation -->
                <Button
                    android:id="@+id/button_plus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@color/black"
                    android:text="+"
                    tools:ignore="Hardcoded text"/>
            </LinearLayout>

            <!-- Layout for the equals button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <!-- Button for the equals operation -->
                <Button
                    android:id="@+id/button_equals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/pink"
                    android:text="="
                    tools:ignore="Hardcoded text"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>